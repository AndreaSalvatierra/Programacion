#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

void main()
{
float N,s,i,cont;
cout<< "ingrese N: ";
cin>> N;
s=0;
cont=2;
i=1;
while (i<=N)
{
       s=s+cont;
       cont=cont+2;
	   i=i+1;
}
cout<< s;
getch();
}
