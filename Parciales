#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()

{
 float p1,p2,p3,np,ef,NF;

do
{
	cout<< "Introducir Parcial 1: ";
	cin>> p1;
}
while((p1>100 || p1<0))


do
{
	cout<< "Introducir Parcial 2: ";
	cin>> p2;
}
while(p2>100 || p2<0);

do
{
	cout<< "Introducir Parcial 3: ";
	cin>> p3;
}
	while (p3>100 || p3<0);

do
{
	cout<< "Introducir Practica: ";
	cin>>np;
}
    while(np>100 || np<0);

do
{
	cout<< "Introducir Nota Final: ";
	cin>> ef;
}
	while(ef>100 || ef<0);
    
	NF = ((p1+p2+p3)/3)*0.4+np*0.2+ef*0.4;
	cout<< "Nota Final: ";
	cin>> NF;

	do
	{
		cout<< "Introducir Parcial 1: ";
		cin>> p1;
	}
	while((p1>100 || p1<0))

	getch();
}
