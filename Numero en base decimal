// El valor del numero en base Decimal 10.cpp : Defines the entry point for the console application.
//Autor:Andrea Salvatierra

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main()
{
int N,r,d,s;
float i;
cout<< "Ingrese el numero: ";
cin>> N;
s=0;
i=0;
while(N>0)
{
	d=N%10;
	N=N/10;
	s=s+d*pow(r,i);
	i=i+1;
}
cout<< "El valor del numero en base decimal es: ";
cout<< s;
getch();
}
